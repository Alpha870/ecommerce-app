{
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)",
      "dest": "server/server.js" 
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}